<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Облік персоналу</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100" style="background-color: #ffffff;" >
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: #FFD700;">
            <div class="container-fluid">
                <a class="navbar-brand text-dark fw-bold" href="/">🏢 Облік персоналу</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" href="/">Головна</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" href="/Employees/Employees">Персонал</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" href="/Reports/Reports">Звітність</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3">
        &copy; @DateTime.Now.Year — Система обліку персоналу
    </footer>
</body>
</html>
